    <!-- navigation menu ends here -->
    <div class="container my-3">
      <div id="standalone-container">
        <form action="./add" class="form-group" method="post"  enctype="multipart/form-data">
            <h4>Post Title</h4>
          <input
            class="form-control mb-5"
            id="title"
            type="text"
            name="title"
          />
          <h4>Upload display image</h4>
          <input type="file"  class="form-control mb-5 " name="image" id="">
          <h4>Write your post</h4>
          <div id="editor" ></div>
          <textarea name="content" id="detail" cols="30" style="display: none" rows="10"></textarea>
          <button type="submit" class="btn btn-primary">ADD POST</button>
        </form>
      </div>
    </div>

    <!-- footer start -->
    <footer class="bg-light text-dark p-5 mt-2">
